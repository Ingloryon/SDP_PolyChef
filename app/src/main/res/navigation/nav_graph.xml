<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onlineMiniaturesFragment">

    <fragment
        android:id="@+id/favouritesFragment"
        android:name="ch.epfl.polychef.FavouritesFragment"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourites" />
    <fragment
        android:id="@+id/subscribersFragment"
        android:name="ch.epfl.polychef.SubscribersFragment"
        android:label="fragment_subscribers"
        tools:layout="@layout/fragment_subscribers" >
        <action
            android:id="@+id/action_subscribersFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
        <action
            android:id="@+id/action_subscribersFragment_to_subscriptionsFragment"
            app:destination="@id/subscriptionsFragment" />
        <action
            android:id="@+id/action_subscribersFragment_to_onlineMiniaturesFragment2"
            app:destination="@id/onlineMiniaturesFragment" />
    </fragment>
    <fragment
        android:id="@+id/subscriptionsFragment"
        android:name="ch.epfl.polychef.SubscriptionsFragment"
        android:label="fragment_subscriptions"
        tools:layout="@layout/fragment_subscriptions" >
        <action
            android:id="@+id/action_subscriptionsFragment_to_subscribersFragment"
            app:destination="@id/subscribersFragment" />
        <action
            android:id="@+id/action_subscriptionsFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
        <action
            android:id="@+id/action_subscriptionsFragment_to_onlineMiniaturesFragment2"
            app:destination="@id/onlineMiniaturesFragment" />
        <action
            android:id="@+id/action_subscriptionsFragment_to_onlineMiniaturesFragment22"
            app:destination="@id/onlineMiniaturesFragment" />
    </fragment>
    <fragment
        android:id="@+id/fullRecipeFragment"
        android:name="ch.epfl.polychef.FullRecipeFragment"
        android:label="FullRecipeFragment" >
        <action
            android:id="@+id/action_fullRecipeFragment_to_subscribersFragment"
            app:destination="@id/subscribersFragment" />
        <action
            android:id="@+id/action_fullRecipeFragment_to_subscriptionsFragment"
            app:destination="@id/subscriptionsFragment" />
        <action
            android:id="@+id/action_fullRecipeFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/onlineMiniaturesFragment"
        android:name="ch.epfl.polychef.OnlineMiniaturesFragment"
        android:label="OnlineMiniaturesFragment" >
        <action
            android:id="@+id/action_onlineMiniaturesFragment_to_fullRecipeFragment"
            app:destination="@id/fullRecipeFragment" />
        <action
            android:id="@+id/action_onlineMiniaturesFragment_to_subscribersFragment"
            app:destination="@id/subscribersFragment" />
        <action
            android:id="@+id/action_onlineMiniaturesFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
        <action
            android:id="@+id/action_onlineMiniaturesFragment_to_subscriptionsFragment"
            app:destination="@id/subscriptionsFragment" />
        <action
            android:id="@+id/action_onlineMiniaturesFragment_self"
            app:destination="@id/onlineMiniaturesFragment" />
    </fragment>
</navigation>